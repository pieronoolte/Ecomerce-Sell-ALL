<div class="bg-white flex justify-between items-center px-2" data-controller="menu">
    <div>
        <%= link_to products_path do %>
            <h1 class="text-xl font-bold text-teal-500 lg:text-2xl">Vendelo</h1>
        <% end %>
    </div>

    <button class="sm:hidden" data-action="click->menu#toggle"><%= image_tag 'icons/menu.svg', width: 35, height: 35%></button>

    <div class="hidden sm:text-sm  md:text-md sm:block lg:text-lg pr-2 ">
        <%= render partial: 'shared/items'%>
    </div>

    <!-- Menu Mobile responsive-->
    <div class="sm:hidden absolute bg-white top-5 right-0 shadow z-10 h-auto 
        flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 hidden"
        data-menu-target="items">
        <button class="flex justify-end" data-action="click->menu#toggle"><%= image_tag 'icons/close.svg', width: 25, height: 25%></button>
        <%= render partial: 'shared/items'%>
    </div>
</div>