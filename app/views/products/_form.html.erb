<%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do |error|%>
        <div>
            <%= error%>
        </div>
    <% end %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, class: "rounded-2xl border-gray-200 mb-4 w-full" %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_area :description, class: "rounded-2xl border-gray-200 mb-4 w-full", rows: 5 %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.number_field :price, class: "rounded-2xl border-gray-200 mb-4 w-full" %>
    </div>

    <div>
        <%= form.label :photo %>
        <%= form.file_field :photo, style: 'display: none;', id: 'photo-field' %>
        <%= button_tag t('common.choose_file'), type: 'button', onclick: 'document.getElementById("photo-field").click();' %>
    </div>

    <div>
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name,  { class: "rounded-2xl border-gray-200 mb-4 w-full text-gray-500"} %>
    </div>

    <%= form.submit class: " m-2 px-4 py-2 font-semibold text-sm bg-cyan-500 text-white rounded-2xl cursor-pointer shadow-sm" %>
<% end %>